rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Trainers collection - allow public read for signup verification, only authenticated users can write their own data
    match /trainers/{trainerId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == trainerId;
    }
    
    // Students collection - students can create/manage their own data, trainers can manage their students
    match /students/{studentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == studentId;
      allow update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.trainerID || 
         request.auth.uid == studentId);
    }
    
    // Attendance records - authenticated users can manage attendance
    match /attendance/{attendanceId} {
      allow read, write: if request.auth != null;
    }
    
    // Tasks - authenticated users can manage tasks
    match /tasks/{taskId} {
      allow read, write: if request.auth != null;
    }
  }
}